<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Creation</title>
  <link rel="stylesheet" href="/createCourse.css">
</head>
<body>
  
    <header>
    {{>navbar}}
  </header>

  

  <div class="main-container">
   
    <div class="sidebar">
      <h3>
        {{#if sessionUser}}
          {{#if (eq sessionUser.role 'instructor')}}
            Instructor Dashboard
          {{else}}
            Student Dashboard
          {{/if}}
        {{else}}
          Guest Dashboard
        {{/if}}
      </h3>
      {{#if (eq sessionUser.role 'student')}}
        <a href="/student/dashboard">
        <img src="/images/icons/home.png" alt="My Courses Icon" class="icon"> My Courses
      </a>
    {{/if}}
    {{#if (eq sessionUser.role 'instructor')}}
        <a href="/instructor/dashboard" >
        <img src="/images/icons/home.png" alt="My Courses Icon" class="icon"> My Courses
      </a>
    {{/if}}
     
      {{#if sessionUser}}
        {{#if (eq sessionUser.role 'instructor')}}
          <a href="/course-creation" class="active">
            <img src="/images/icons/create.png" alt="Create Course Icon" class="icon"> Create Course
          </a>
        {{/if}}
      {{/if}}
      <a href="/profile">
        <img src="/images/icons/profile.png" alt="Profile Icon" class="icon"> Profile
      </a>
      <a href="/logout">
        <img src="/images/icons/logout.png" alt="Logout Icon" class="icon"> Logout
      </a>
    </div>
    <!-- Main Content -->
    <main class="content">
      <h1>Create a New Course</h1>

      <form action="/course-creation" method="POST" class="course-creation-form">
        <!-- Title -->
        <label for="title">Course Title:</label>
        <input type="text" id="title" name="title" placeholder="Enter course title" required>

        <!-- Description -->
        <label for="description">Course Description:</label>
        <textarea id="description" name="description" rows="5" placeholder="Enter a detailed description of the course" required></textarea>

        <!-- Video URL -->
        <label for="videoUrl">Video URL:</label>
        <input type="url" id="videoUrl" name="videoUrl" placeholder="Enter YouTube video URL" required>

        <!-- Thumbnail URL -->
        <label for="thumbnailUrl">Thumbnail URL:</label>
        <input type="url" id="thumbnailUrl" name="thumbnailUrl" placeholder="Enter thumbnail image URL" required>

        <!-- Language -->
        <label for="language">Language:</label>
        <select id="language" name="language" required>
          <option value="">Select Language</option>
          <option value="english">English</option>
          <option value="estonian">Estonian</option>
        </select>

        <!-- Category -->
        <label for="category">Category:</label>
        <select id="category" name="category" required>
          <option value="">Select Category</option>
          <option value="development">Development</option>
          <option value="design">Design</option>
          <option value="business">Business</option>
        </select>

        <!-- Price -->
        <label for="price">Price (e.g., 12,99):</label>
        <input type="number" id="price" name="price" step="0.01" min="0" placeholder="Enter price" required>

        <!-- Difficulty -->
        <label for="difficulty">Difficulty:</label>
        <select id="difficulty" name="difficulty" required>
          <option value="">Select Difficulty</option>
          <option value="beginner">Beginner</option>
          <option value="intermediate">Intermediate</option>
          <option value="advanced">Advanced</option>
        </select>

        <!-- Submit Button -->
        <button type="submit" class="submit-button">Create Course</button>
      </form>
    </main>
  </div>

  <!-- Footer -->
  {{> footer}}
</body>
</html>
