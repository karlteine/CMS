<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="/profile.css">
</head>
<body>
  <!-- Fixed Navbar -->
  <header>
     {{>navbar}}
  </header>

  <div class="main-container" style="padding-top: 80px;">
     <!-- Sidebar -->
     <div class="sidebar">
      <h3>
        {{#if sessionUser}}
          {{#if (eq sessionUser.role 'instructor')}}
            Instructor Dashboard
          {{else}}
            Student Dashboard
          {{/if}}
        {{else}}
          Guest Dashboard
        {{/if}}
      </h3>
      {{#if (eq sessionUser.role 'student')}}
        <a href="/student/dashboard" >
        <img src="/images/icons/home.png" alt="My Courses Icon" class="icon"> My Courses
      </a>
    {{/if}}
    {{#if (eq sessionUser.role 'instructor')}}
        <a href="/instructor/dashboard" >
        <img src="/images/icons/home.png" alt="My Courses Icon" class="icon"> My Courses
      </a>
    {{/if}}
     
      {{#if sessionUser}}
        {{#if (eq sessionUser.role 'instructor')}}
          <a href="/course-creation">
            <img src="/images/icons/create.png" alt="Create Course Icon" class="icon"> Create Course
          </a>
        {{/if}}
      {{/if}}
      <a href="/profile" class="active">
        <img src="/images/icons/profile.png" alt="Profile Icon" class="icon"> Profile
      </a>
      <a href="/logout">
        <img src="/images/icons/logout.png" alt="Logout Icon" class="icon"> Logout
      </a>
    </div>
    <!-- Hero Section -->
    <section class="profile-hero">
      <h1>Welcome, {{sessionUser.name}}!</h1>
      <p>Role: {{sessionUser.role}}</p>
      <p>Email: {{sessionUser.email}}</p>
    </section>

    <!-- Profile Actions Section -->
    <section class="profile-actions">
      <h2>Manage Your Account</h2>
      <ul>
        <li><a href="/profile/edit">Edit Profile</a></li>
        <li><a href="/profile/change-password">Change Password</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </section>
  </div>

  <!-- Footer Section -->
  <footer>
    <p>&copy; 2024 VideoCourses. All rights reserved.</p>
  </footer>
</body>
</html>
